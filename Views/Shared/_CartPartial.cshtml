@using App.Areas.Srevice
@inject CartService _cartService


@{
    var cart = _cartService.GetCartItems();

    if (cart.Count >= 0)
    {
        <div class="nav-item "><a class="text-warning" asp-route="cart"><i class="fas fa-shopping-cart"></i>(@cart.Count) </a>
        </div>

    }
}



