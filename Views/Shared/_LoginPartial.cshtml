@using Microsoft.AspNetCore.Identity
@using App.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-controller="Manage" asp-action="Index"
            title="Manage"><i class="fas fa-user-alt"></i> @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" method="post" asp-area="Identity" asp-action="Logout"
            asp-controller="account">
                <button title="Đăng xuất" id="logout" type="submit" class="nav-link btn btn-link text-dark"><i
                    class="fas fa-sign-out-alt"></i></button>
            </form>
        </li>
    }
    else
    {
        @* <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-action="Register" asp-controller="account"
            asp-area="Identity">Register</a>
            </li> *@
        <li class="nav-item">
            <a title="Đăng nhập" class="nav-link text-dark" id="login" asp-area="Identity" asp-action="Login"
            asp-controller="account"><i class="fas fa-sign-in-alt"></i></a>
        </li>
    }
</ul>
