@using App.Menu
@inject AdminSidebarService _AdminSidebarService
@using App.Areas.Identity.UserViewModel
@model UserSetpasswordViewModel
@{
    ViewData["Title"] = "Set password";
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Thiết lập mật khẩu cho thành viên: @Model.user.UserName</h4>
<partial name="_StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Đặt mật khẩu</button>
            <a asp-action="Index" class="btn btn-primary">Danh sách thành viên</a>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
@{
    _AdminSidebarService.SetActive("User", "Index", "Identity");
}
@section Sidebar
{
@Html.Raw(_AdminSidebarService.renderHtml())
}