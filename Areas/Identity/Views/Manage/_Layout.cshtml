@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout))
    {
        Layout = (string)parentLayout;
    }
    else
    {
        Layout = "/Views/Shared/_LayoutProductSub.cshtml";
    }

}
<h2 style="font-size:3rem;">Quản Lý Tài Khoản</h2>

<div>
    <h4 style="font-size:2.5rem;">Thay đổi các thiết lập của tài khoản</h4>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
@RenderSection("Scripts", required: false)
}
