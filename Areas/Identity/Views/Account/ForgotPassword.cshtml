@using App.Areas.Identity.Models.AccountViewModels
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_LoginLayout.cshtml";
}
<style>
    .bg-password-image {
        background: url(https://localhost:5001/contents/login2.gif?_t=1646412611);
        background-position: center;
        background-size: contain;
        background-repeat: no-repeat;
        background-color: black;
    }
</style>

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-2">Quên mật khẩu?</h1>
                                <p class="mb-4">Hãy nhập địa chỉ email của tài khoản để lấy lại mật khẩu!</p>
                            </div>
                            <form class="user" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input class="form-control form-control-user" asp-for="Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary btn-user btn-block">Gửi</button>
                            </form>

                            <hr>
                            <div class="text-center">
                                <a class="small" asp-area="Identity" asp-controller="account" asp-action="Register">Đăng
                                    ký tài khoản mới</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Login" asp-controller="account" asp-area="Identity">Đã có
                                    tài khoản
                                    đăng nhập</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
